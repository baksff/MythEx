-- Scripts:

local function CNWAUI_fake_script() -- SpectateGUI.heheboi 
	local script = Instance.new('LocalScript', SpectateGUI)

	local btn = script.Parent.OpenSpec
	local frame = script.Parent.SpecFrame
	local title = frame.PlrName
	local left = frame.Left
	local right = frame.Right
	local cam = workspace.CurrentCamera
	local num = 1
	local plr = game.Players.LocalPlayer
	
	btn.MouseButton1Down:Connect(function()
		if frame.Visible == true then
			frame.Visible = false
			title.Text = "Current Player: "..plr.Name
			cam.CameraSubject = plr.Character.Humanoid
			num = 1
			btn.Rotation = -90
		else
			frame.Visible = true
			title.Text = "Current Player: "..plr.Name
			cam.CameraSubject = plr.Character.Humanoid
			num = 1
			btn.Rotation = 90
		end
	end)
	
	right.MouseButton1Down:Connect(function()
		local players = game.Players:GetPlayers()
		local all = #players
		num = num +1
		if num > all then
			num = 1
		end
		cam.CameraSubject = players[num].Character.Humanoid
		title.Text = "Current Player: "..players[num].Name
	end)
	
	left.MouseButton1Down:Connect(function()
		local players = game.Players:GetPlayers()
		local all = #players
		num = num -1
		if num < 1 then
			num = all
		end
		cam.CameraSubject = players[num].Character.Humanoid
		title.Text = "Current Player: "..players[num].Name
	end)
end
coroutine.wrap(CNWAUI_fake_script)()
